#!/usr/bin/env bash
# Create a PID file and handle signals while printing messages indefinitely

# Create the PID file
echo $$ > /var/run/myscript.pid

# Trap SIGTERM to display a message
trap 'echo "I hate the kill command"' SIGTERM

# Trap SIGINT (Ctrl+C) to display a message
trap 'echo "Y U no love me?!"' SIGINT

# Trap SIGQUIT or SIGTERM to remove PID file and exit
trap 'rm -f /var/run/myscript.pid; exit' SIGQUIT SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
